<h1>Recipes</h1>
<% @recipes.each do |recipe| %>
<a href="/recipes/<%= recipe.id %>">Name: <%=recipe.name %></a>
Ingredients: <%= recipe.ingredients %>
Cook Time: <%= recipe.cook_time %>
<br></br>
<% end %>

<form method="post" action="/recipes/new">
    <input id="hidden" type="hidden" name="_method" value="create">

  <input type="submit" value="Create New Recipe">
</form>
